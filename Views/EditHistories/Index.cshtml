@model IEnumerable<PicPerfect.Models.EditHistory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EditDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EditDatetime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EditDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EditDatetime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EditId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EditId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EditId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
